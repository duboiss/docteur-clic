{% extends 'base.html.twig' %}

{% block title %}Docteur {{ user.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Docteur {{ user.name }}</h1>
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Nom d'utilisateur</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Actions</th>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_admin_doctor_edit', {'id': user.id}) }}" class="btn btn-secondary btn-sm me-2">Editer</a> {{ include('doctor/_delete_form.html.twig') }}
                        </div>
                </tr>
                </tbody>
            </table>
            <a href="{{ path('app_admin_doctor_index') }}">retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}
