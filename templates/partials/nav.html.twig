{% set route = app.request.get('_route') %}
<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">DocteurClic</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link{{ route == 'app_home' ? ' active' }}" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{{ route == 'app_doctors' ? ' active' }}" href="{{ path('app_doctors') }}">Médecins</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {% if app.user %}
                    <li class="nav-item"><a class="nav-link{{ route == 'app_account' ? ' active' }}" href="{{ path('app_account') }}">Mon compte - {{ app.user.name }}</a></li>
                    <li class="nav-item"><a class="nav-link{{ route == 'app_logout' ? ' active' }}" href="{{ path('app_logout') }}">Déconnexion</a></li>
                {% else %}
                    <li class="nav-item"><a class="nav-link{{ route == 'app_login' ? ' active' }}" href="{{ path('app_login') }}">Connexion</a></li>
                    <li class="nav-item"><a class="nav-link{{ route == 'app_register' ? ' active' }}" href="{{ path('app_register') }}">Inscription</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
